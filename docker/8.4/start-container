#!/usr/bin/env bash

# Change to the application directory
cd /var/www/html

# Ensure storage and cache directories exist
mkdir -p storage/logs storage/framework/{sessions,views,cache} bootstrap/cache

# Remove cached configuration files that might have wrong paths
rm -f bootstrap/cache/config.php
rm -f bootstrap/cache/routes-v7.php
rm -f bootstrap/cache/events.php
rm -f bootstrap/cache/packages.php
rm -f bootstrap/cache/services.php

# Set correct ownership and permissions
# Using || true to prevent script from failing if some files can't be changed
chown -R sail:sail storage bootstrap/cache 2>/dev/null || true
chmod -R 775 storage bootstrap/cache 2>/dev/null || true
chmod 775 storage bootstrap/cache 2>/dev/null || true

# Clear all Laravel caches to ensure fresh configuration
if [ -f artisan ]; then
    php artisan config:clear || true
    php artisan cache:clear || true
    php artisan view:clear || true
    php artisan route:clear || true
    php artisan event:clear || true
fi

if [ "$SUPERVISOR_PHP_USER" != "root" ] && [ "$SUPERVISOR_PHP_USER" != "sail" ]; then
    echo "You should set SUPERVISOR_PHP_USER to either 'sail' or 'root'."
    exit 1
fi

if [ ! -z "$WWWUSER" ]; then
    usermod -u $WWWUSER sail
fi

if [ ! -d /.composer ]; then
    mkdir /.composer
fi

chmod -R ugo+rw /.composer

if [ $# -gt 0 ]; then
    if [ "$SUPERVISOR_PHP_USER" = "root" ]; then
        exec "$@"
    else
        exec gosu $WWWUSER "$@"
    fi
else
    exec /usr/bin/supervisord -c /etc/supervisor/conf.d/supervisord.conf
fi
