{
  "preset": "laravel",
  "rules": {
    "concat_space": {
      "spacing": "one"
    },
    "phpdoc_align": {
      "align": "left"
    },
    "new_with_parentheses": {
      "anonymous_class": false
    },
    "blank_line_before_statement": {
      "statements": [
        "break",
        "continue",
        "do",
        "exit",
        "for",
        "foreach",
        "if",
        "phpdoc",
        "return",
        "switch",
        "throw",
        "try",
        "while",
        "yield"
      ]
    },
    "no_superfluous_phpdoc_tags": false
  }
}
