name: Deploy to Production (Git Pull)

# Альтернативный вариант деплоя БЕЗ rsync
# Использует git pull на сервере
# НЕ РЕКОМЕНДУЕТСЯ для production (менее безопасно)

on:
  push:
    branches:
      - main
      - master
  workflow_dispatch:

jobs:
  deploy:
    name: Deploy to Production Server (Git Pull)
    runs-on: ubuntu-latest

    steps:
      - name: 🔑 Setup SSH
        uses: webfactory/ssh-agent@v0.9.0
        with:
          ssh-private-key: ${{ secrets.SSH_PRIVATE_KEY }}

      - name: 📦 Add server to known hosts
        run: |
          mkdir -p ~/.ssh
          ssh-keyscan -H ${{ secrets.SERVER_HOST }} >> ~/.ssh/known_hosts

      - name: 🚀 Deploy using git pull
        env:
          SERVER_HOST: ${{ secrets.SERVER_HOST }}
          SERVER_USER: ${{ secrets.SERVER_USER }}
          SERVER_PATH: ${{ secrets.SERVER_PATH }}
        run: |
          ssh $SERVER_USER@$SERVER_HOST << 'EOF'
            cd $SERVER_PATH

            # Pull latest code
            git fetch origin
            git reset --hard origin/main

            # Run deployment script
            bash deploy-production.sh
          EOF

      - name: ✅ Deployment successful
        run: echo "✅ Deployment completed"

